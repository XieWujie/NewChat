<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="presenter" type="com.example.administrator.newchat.utilities.UserHomePresenter"/>
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.UserMessageFragment">
        <ImageView android:layout_width="100dp"
                   imageSrc="@{presenter.avatar}"
                   android:id="@+id/user_avatar"
                   android:scaleType="centerCrop"
                   android:layout_centerHorizontal="true"
                   android:layout_height="100dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="@{presenter.username}"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/user_avatar"
                  android:layout_height="wrap_content"/>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="60dp"
               android:id="@+id/bottom_nav">
            <TextView android:layout_width="0dp"
                      android:text="添加好友"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:onClick="@{presenter::add}"
                      android:layout_height="match_parent"/>

            <TextView android:layout_width="0dp"
                      android:text="发送消息"
                      android:onClick="@{presenter::sendMessage}"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

</layout>